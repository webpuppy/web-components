{
  "compilerOptions": {
    "target": "es2019",
	"module": "es2015",
	"moduleResolution": "node",
	"lib": ["es2019", "dom"],
	"declaration": true,
	"experimentalDecorators": true,
	"useDefineForClassFields": false,
	"allowUmdGlobalAccess": true,
	"resolveJsonModule": true,
	"allowSyntheticDefaultImports": true,
	"allowJs": true,
	"rootDir": "./src",
	"baseUrl": "./src",
	"outDir": "build"
  },
  "files": [
	"src/index.ts"
  ]
}
