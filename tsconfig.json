{
  "compilerOptions": {
    "target": "es2019",
		"module": "es2015",
		"moduleResolution": "node",
		"lib": ["es2019", "dom"],
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"allowUmdGlobalAccess": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"rootDir": "./src",
		"baseUrl": "./src"
  },
  "include": [
		"src/**/*"
  ]
}
