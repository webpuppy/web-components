{
  "name": "@webpuppy/web-components",
  "license": "BSD-3-Clause",
  "version": "0.0.45",
  "description": "webpuppy web components with lit html",
  "main": "lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "module": "lib/esm/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "bundle": "rollup -c rollup.bundle.js",
    "build": "rollup -c",
    "gulp": "yarn build && gulp --gulpfile gulpfile.js",
    "format:check": "prettier --check ./src",
    "format": "prettier --write ./src",
    "lint:lit-analyzer": "lit-analyzer",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --watch",
    "dev": "npm-run-all -p serve gulp",
    "serve:prod": "MODE=prod npm run serve",
    "checksize": "rollup -c ; cat my-element.bundled.js | gzip -9 | wc -c ; rm my-element.bundled.js",
    "build:sass": "sass ./src/sass/style.scss:./static/style.css",
    "watch:sass": "sass -w ./src/sass/style.scss:./static/style.css"
  },
  "prettier": "@webpuppy/prettier",
  "eslintConfig": {
    "plugins": [
      "lit",
      "lit-a11y"
    ],
    "extends": [
      "@webpuppy/base",
      "@webpuppy/typescript",
      "plugin:lit/recommended",
      "plugin:lit-a11y/recommended"
    ],
		"rules": {
			"lit/no-template-arrow": "warn",
			"class-methods-use-this": "off"
		}
  },
  "dependencies": {
    "lit": "^2.2.7"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@babel/core": "^7.19.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@custom-elements-manifest/analyzer": "^0.6.4",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^23.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^9.0.1",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/gulp": "^4.0.9",
    "@types/merge2": "^1.3.1",
    "@types/rollup-plugin-peer-deps-external": "^2",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "@web/dev-server": "^0.1.31",
    "@web/dev-server-legacy": "^1.0.0",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.11.0",
    "@web/rollup-plugin-polyfills-loader": "^1.3.1",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "@webpuppy/eslint-config-base": "^0.1.4",
    "@webpuppy/eslint-config-typescript": "^0.1.6",
    "@webpuppy/prettier": "^0.1.3",
    "eslint": "^8.25.0",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-lit-a11y": "^2.2.3",
    "gulp": "^4.0.2",
    "gulp-sass": "^5.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "lit-analyzer": "^1.2.1",
    "merge2": "^1.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "rollup-plugin-dts": "^4.2.3",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-summary": "^1.4.3",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.55.0",
    "typedoc": "^0.23.7",
    "typedoc-plugin-markdown": "^3.13.3",
    "typescript": "~4.6.4"
  },
  "author": "abschill",
  "contributors": [
    {
      "name": "abschill",
      "email": "dev3141592@gmail.com",
      "url": "https://blog.abschill.com"
    },
    {
      "name": "kylegriffith",
      "email": "kylegriffithmail@gmail.com"
    }
  ],
  "packageManager": "yarn@3.2.4",
  "keywords": [
    "webpuppy",
    "wp-web-components",
    "webpuppy-ui",
    "web-components",
    "lit",
    "lit-html",
    "lit-element",
    "typescript",
    "es6",
    "es2020"
  ],
  "customElements": "custom-elements.json"
}
